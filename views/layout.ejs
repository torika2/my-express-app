<!-- layout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title> <!-- Dynamic title -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/index.css" rel="stylesheet">
</head>
<body style="height: 100vh" class="d-flex flex-column justify-content-between">
<header>
    <nav class="p-2 py-4 bg-dark">
        <div class="d-flex align-items-center justify-content-between m-0 w-100">
            <div class="pb-1">
                <a href="/" class="btn rounded-0 text-white text-decoration-none">
                    <img height="50" src="/assets/images/card_heart_A.svg" alt="">
                </a>
            </div>
            <div class="d-flex align-items-center">
                <% if (is_logged_in) { %>
                    <div class="pb-1 px-2 d-flex align-items-center">
                        <a href="/wallet" class="border-bottom btn rounded-0 text-white text-decoration-none">
                            WALLET
                        </a>
                    </div>
                    <div class="pb-1 px-2 d-flex align-items-center">
                        <a href="/dashboard" class="border-bottom btn rounded-0 text-white text-decoration-none">
                            Dashboard
                        </a>
                    </div>
                    <div class="pb-1 px-2 d-flex align-items-center">
                        <a href="/logout" class="btn rounded-0 text-white text-decoration-none">
                            <img src="/assets/images/logout.svg" alt="Logout" height="27">
                        </a>
                    </div>
                <% } else { %>
                    <div class="pb-1 px-2 d-flex align-items-center">
                        <a href="/login" class="border-bottom btn rounded-0 text-white text-decoration-none">
                            Login
                        </a>
                    </div>
                    <div class="pb-1 px-2 d-flex align-items-center">
                        <a href="/register" class="border-bottom btn rounded-0 text-white text-decoration-none">
                            Register
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>
</header>

<main>
    <!-- This will be replaced with the content of specific pages -->
    <%- body %>
</main>

<footer>
    <p>&copy; 2025 My EJS App</p>
</footer>
</body>
</html>